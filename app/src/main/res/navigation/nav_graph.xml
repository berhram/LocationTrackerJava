<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login_screen">
    <fragment
        android:id="@+id/login_screen"
        android:name="com.velvet.trackerforsleepwalkers.ui.login.LoginFragment"
        android:label="@string/login_screen_label"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/login_screen_to_map_screen"
            app:destination="@id/map_screen" />
        <action
            android:id="@+id/login_screen_to_passord_recovery_screen"
            app:destination="@id/password_recovery_screen" />
    </fragment>

    <fragment
        android:id="@+id/password_recovery_screen"
        android:name="com.velvet.trackerforsleepwalkers.ui.passwordrecovery.PasswordRecoveryFragment"
        android:label="@string/password_recovery_screen_label"
        tools:layout="@layout/fragment_password_recovery">
        <action
            android:id="@+id/password_recovery_screen_to_login_screen"
            app:destination="@id/login_screen" />
    </fragment>

    <fragment
        android:id="@+id/map_screen"
        android:name="com.velvet.trackerforsleepwalkers.ui.map.MapFragment"
        android:label="@string/map_screen_label"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/map_screen_to_history_screen"
            app:destination="@+id/history_screen" />
        <action
            android:id="@+id/map_screen_to_settings_screen"
            app:destination="@+id/settings_screen" />
    </fragment>

    <fragment
        android:id="@+id/history_screen"
        android:name="com.velvet.trackerforsleepwalkers.ui.history.HistoryFragment"
        android:label="@string/history_screen_label"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/history_screen_to_settings_screen"
            app:destination="@+id/settings_screen" />
        <action
            android:id="@+id/history_screen_to_map_screen"
            app:destination="@+id/map_screen" />
    </fragment>

    <fragment
        android:id="@+id/settings_screen"
        android:name="com.velvet.trackerforsleepwalkers.ui.settings.SettingsFragment"
        android:label="@string/settings_screen_label"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/settings_screen_to_history_screen"
            app:destination="@+id/history_screen" />
        <action
            android:id="@+id/settings_screen_to_map_screen"
            app:destination="@+id/map_screen" />
    </fragment>

</navigation>
